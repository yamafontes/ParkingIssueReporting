    <sys_script_client action="INSERT_OR_UPDATE">
        <active>true</active>
        <applies_extended>false</applies_extended>
        <condition/>
        <description>Add a power icon to the Car field if the selected car is electric</description>
        <field>car</field>
        <global>true</global>
        <messages/>
        <name>Add power icon</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
   if (isLoading || newValue === '') {
      return;
   }
	
	g_form.getReference("car", setPowerIcon);
	function setPowerIcon(car) {
		if (car.supports_charging === "true") {
			g_form.addDecoration("car", "icon-power", "Supports charging");
		} else {
			g_form.removeDecoration("car", "icon-power", "Supports charging");
		}
	}
}]]></script>
